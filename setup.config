[metadata]
name = sentinel-v
version = 1.0.0
author = Sentinel-V Team
author_email = contact@sentinel-v.org
description = Autonomous Cyber-Defense Framework
long_description = file: README.md
long_description_content_type = text/markdown
url = https://github.com/yourusername/sentinel-v-cyber-defense
project_urls =
    Documentation = https://sentinel-v.readthedocs.io
    Bug Tracker = https://github.com/yourusername/sentinel-v-cyber-defense/issues
    Changelog = https://github.com/yourusername/sentinel-v-cyber-defense/releases
classifiers =
    Development Status :: 4 - Beta
    Intended Audience :: Information Technology
    Intended Audience :: System Administrators
    License :: OSI Approved :: MIT License
    Operating System :: OS Independent
    Programming Language :: Python :: 3
    Programming Language :: Python :: 3.8
    Programming Language :: Python :: 3.9
    Programming Language :: Python :: 3.10
    Programming Language :: Python :: 3.11
    Topic :: Security
    Topic :: System :: Networking :: Monitoring
keywords = cybersecurity, defense, autonomous, threat-detection, honeypot
license = MIT

[options]
package_dir =
    = .
packages = find:
python_requires = >=3.8
install_requires =
    numpy>=1.21.0
    cryptography>=38.0.0
    pyyaml>=6.0
    requests>=2.28.0
    psutil>=5.9.0; sys_platform != 'emscripten'

[options.packages.find]
where = .

[options.entry_points]
console_scripts =
    sentinel-v = sentinel_v.cli:main

[egg_info]
tag_build =
tag_date = 0
